DESCRIPTION="PDF toolkit"
HOMEPAGE="http://www.pdflabs.com/tools/pdftk-the-pdf-toolkit/"
SRC_URI="http://www.pdflabs.com/tools/pdftk-the-pdf-toolkit/${P}-src.zip"

src_compile() {
	lndirs
	cd ${B}/pdftk
	cygmake -j1 -f Makefile.Redhat LDLIBS="-lgcj-noncore -lgcj"
}

src_install() {
	cd ${B}
	dobin pdftk/pdftk.exe
	doman pdftk.1
	dodoc license_gpl_pdftk/*.txt
}
